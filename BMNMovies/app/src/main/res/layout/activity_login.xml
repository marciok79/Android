<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dev.bmnmovies.LoginActivity">

    <EditText
        android:id="@+id/editTextUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:ems="10"
        android:hint="@string/Hint"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toLeftOf="@+id/editTextsenha"
        app:layout_constraintRight_toRightOf="@+id/editTextsenha"
        app:layout_constraintHorizontal_bias="0.812"
        android:layout_marginBottom="7dp"
        app:layout_constraintBottom_toTopOf="@+id/editTextsenha" />

    <EditText
        android:id="@+id/editTextsenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="@string/login_senha"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.532"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.511" />

    <Button
        android:id="@+id/buttonEntrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="7dp"
        android:onClick="clickbuttonEntrar"
        android:text="@string/login_entrar"
        app:layout_constraintHorizontal_bias="0.456"
        app:layout_constraintLeft_toLeftOf="@+id/editTextsenha"
        app:layout_constraintRight_toRightOf="@+id/editTextsenha"
        app:layout_constraintTop_toBottomOf="@+id/editTextsenha" />

    <TextView
        android:id="@+id/textViewcad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:text="Cadastrar"
        app:layout_constraintBottom_toBottomOf="@+id/buttonEntrar"
        app:layout_constraintLeft_toRightOf="@+id/buttonEntrar"
        app:layout_constraintRight_toRightOf="@+id/editTextsenha"
        app:layout_constraintTop_toBottomOf="@+id/editTextsenha"
        tools:onClick="clickbuttonEntrar"
        tools:shadowColor="@android:color/holo_blue_bright"
        tools:textColorLink="@android:color/holo_blue_dark"
        android:textColor="@color/colorPrimary"
        />

</android.support.constraint.ConstraintLayout>
